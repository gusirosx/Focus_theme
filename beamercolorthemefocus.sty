\mode<presentation>


% DEFINE COLORS. ---------------------------------------------------------------
\definecolor{mainb}{RGB}{64, 64, 64} % Black Font
%\definecolor{main}{RGB}{64, 64, 64} % Dark
%\definecolor{main}{RGB}{78, 0, 142} % Pur
\definecolor{main}{RGB}{175, 51, 51} % Red
%\definecolor{main}{RGB}{16, 6, 159} % blue
%\definecolor{main}{RGB}{92, 138, 168}
%\definecolor{background}{RGB}{240, 247, 255}


\definecolor{background}{RGB}{255,255,255}

\definecolor{alert}{RGB}{180, 0, 0}
\definecolor{example}{RGB}{0, 110, 0}


% SET COLORS. ------------------------------------------------------------------
\setbeamercolor{normal text}{fg=mainb, bg=background}
\setbeamercolor{alerted text}{fg=alert}
\setbeamercolor{example text}{fg=example}

\setbeamercolor{titlelike}{fg=background, bg=main}
\setbeamercolor{frametitle}{parent={titlelike}}

\setbeamercolor{footline}{fg=background, bg=main}

\setbeamercolor{block title}{bg=mainb!80!background, fg=background}
\setbeamercolor{block body}{bg=mainb!10!background, fg=mainb}

\setbeamercolor{block title alerted}{bg=alert, fg=background}
\setbeamercolor{block body alerted}{bg=alert!10!background, fg=mainb}

\setbeamercolor{block title example}{bg=example, fg=background}
\setbeamercolor{block body example}{bg=example!10!background, fg=mainb}

\setbeamercolor{itemize item}{fg=mainb}
\setbeamercolor{itemize subitem}{fg=main}

\setbeamercolor{enumerate item}{fg=main!70!black}
\setbeamercolor{enumerate subitem}{fg=main!70!black}

\setbeamercolor{description item}{fg=mainb!70!black}
\setbeamercolor{description subitem}{fg=mainb!70!black}

\setbeamercolor{caption name}{fg=mainb}

\setbeamercolor{section in toc}{fg=mainb}
\setbeamercolor{subsection in toc}{fg=mainb}
\setbeamercolor{section number projected}{bg=main}
\setbeamercolor{subsection number projected}{bg=main}

\setbeamercolor{bibliography item}{fg=mainb}
\setbeamercolor{bibliography entry author}{fg=alert!70!black}
\setbeamercolor{bibliography entry title}{fg=mainb}
\setbeamercolor{bibliography entry location}{fg=mainb}
\setbeamercolor{bibliography entry note}{fg=mainb}

\mode<all>
